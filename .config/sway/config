set $mod Mod4
set $left h
set $down j
set $up k
set $right l

set $term footclient
set $menu fuzzel

output $display mode 2560x1080@75Hz

exec swayidle -w \
         timeout 100 'swaymsg "output \* power off"' resume 'swaymsg "output \* power on"' \
         timeout 300 'swaylock' \
		 timeout 900 'systemctl suspend' \
         before-sleep 'swaylock'

exec {
	/usr/lib/geoclue-2.0/demos/agent &
	/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
	udiskie -ant &
	nm-applet &
	blueman-applet &
	kotatogram-desktop -startintray &
	kdeconnect-indicator &
	element-desktop --hidden --enable-features=UseOzonePlatform --ozone-platform=wayland &
	/home/kadyklesha/.local/share/JetBrains/Toolbox/bin/jetbrains-toolbox --minimize --enable-features=UseOzonePlatform --ozone-platform=wayland &
	oguri &
	foot --server &
}

exec_always {
	gsettings set org.gnome.desktop.interface gtk-theme "Gruvbox-Dark-BL-LB"
	gsettings set org.gnome.desktop.interface icon-theme "Colloid-orange-dark"
	gsettings set org.gnome.desktop.interface cursor-theme "Graphite-light-cursors"
	gsettings set org.gnome.desktop.interface font-name "Inter 11"
}

input type:keyboard {
	xkb_layout us,ru
	xkb_options grp:win_space_toggle
	xkb_numlock enabled
}

border_images.focused /home/kadyklesha/.config/sway/active_border.png

set $WOBSOCK $XDG_RUNTIME_DIR/wob.sock
exec rm -f $WOBSOCK && mkfifo $WOBSOCK && tail -f $WOBSOCK | wob
    # Start a terminal
    bindsym --to-code $mod+Return exec $term
	bindsym --to-code $mod+Alt+Return exec $term -a term-floating

    # Kill focused window
    bindsym --to-code $mod+q kill

    # Start your launcher
    bindsym --to-code Control+Space exec $menu

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $mod normal

    # Reload the configuration file
    bindsym --to-code $mod+Alt+r reload

	# exit sway
	bindsym --to-code $mod+Alt+q exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

    # rofi power menu
    bindsym --to-code $mod+Escape exec /home/kadyklesha/.config/rofi/applets/android/powermenu.sh

	# kaomoji picker
	bindsym --to-code $mod+F1 exec /home/kadyklesha/.scripts/kaomoji-rofi/kaomoji.sh

	# toggle eww dashboard
	bindsym --to-code $mod+grave exec /home/kadyklesha/.config/eww/toggle.sh

	# screenshot
	bindsym --to-code Print exec /home/kadyklesha/.scripts/screenshot-wl.sh

	# start ranger
	bindsym --to-code $mod+r exec $term -a term-floating -e ranger
	# start thunar
	bindsym --to-code $mod+Shift+r exec gtk-launch thunar

	# player controls
	bindsym --to-code XF86AudioPlay exec playerctl play-pause
	bindsym --to-code XF86AudioNext exec playerctl next
	bindsym --to-code XF86AudioPrev exec playerctl previous
	# volume control
	bindsym --to-code XF86AudioLowerVolume exec amixer -q sset 'Master' 5%- && pactl get-sink-volume @DEFAULT_SINK@ | head -n 1| awk '{print substr($5, 1, length($5)-1)}' > $WOBSOCK
	bindsym --to-code XF86AudioRaiseVolume exec amixer -q sset 'Master' 5%+ && pactl get-sink-volume @DEFAULT_SINK@ | head -n 1| awk '{print substr($5, 1, length($5)-1)}' > $WOBSOCK
	bindsym --to-code XF86AudioMute exec amixer -q sset 'Master' toggle && pactl get-sink-volume @DEFAULT_SINK@ | head -n 1| awk '{print substr($5, 1, length($5)-1)}' > $WOBSOCK

	# calculator
	bindsym --to-code XF86Calculator exec gtk-launch qalc

    # Move your focus around
    bindsym --to-code $mod+$left focus left
    bindsym --to-code $mod+$down focus down
    bindsym --to-code $mod+$up focus up
    bindsym --to-code $mod+$right focus right
    # Or use $mod+[up|down|left|right]
    bindsym --to-code $mod+Left focus left
    bindsym --to-code $mod+Down focus down
    bindsym --to-code $mod+Up focus up
    bindsym --to-code $mod+Right focus right

    # Move the focused window with the same, but add Shift
    bindsym --to-code $mod+Shift+$left move left
    bindsym --to-code $mod+Shift+$down move down
    bindsym --to-code $mod+Shift+$up move up
    bindsym --to-code $mod+Shift+$right move right
    # Ditto, with arrow keys
    bindsym --to-code $mod+Shift+Left move left
    bindsym --to-code $mod+Shift+Down move down
    bindsym --to-code $mod+Shift+Up move up
    bindsym --to-code $mod+Shift+Right move right

    # Switch to workspace
    bindsym --to-code $mod+1 workspace number 1
    bindsym --to-code $mod+2 workspace number 2
    bindsym --to-code $mod+3 workspace number 3
    bindsym --to-code $mod+4 workspace number 4
    bindsym --to-code $mod+5 workspace number 5
    bindsym --to-code $mod+6 workspace number 6
    bindsym --to-code $mod+7 workspace number 7
    bindsym --to-code $mod+8 workspace number 8
    bindsym --to-code $mod+9 workspace number 9
    bindsym --to-code $mod+0 workspace number 10
    # Move focused container to workspace
    bindsym --to-code $mod+Shift+1 move container to workspace number 1
    bindsym --to-code $mod+Shift+2 move container to workspace number 2
    bindsym --to-code $mod+Shift+3 move container to workspace number 3
    bindsym --to-code $mod+Shift+4 move container to workspace number 4
    bindsym --to-code $mod+Shift+5 move container to workspace number 5
    bindsym --to-code $mod+Shift+6 move container to workspace number 6
    bindsym --to-code $mod+Shift+7 move container to workspace number 7
    bindsym --to-code $mod+Shift+8 move container to workspace number 8
    bindsym --to-code $mod+Shift+9 move container to workspace number 9
    bindsym --to-code $mod+Shift+0 move container to workspace number 10

    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym --to-code $mod+b splith
    bindsym --to-code $mod+v splitv

    # Switch the current container between different layout styles
    bindsym --to-code $mod+Shift+s layout stacking
    bindsym --to-code $mod+w layout tabbed
    bindsym --to-code $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym --to-code $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym --to-code $mod+s floating toggle

    # Swap focus between the tiling area and the floating area
	bindsym --to-code $mod+z focus mode_toggle

    # Move focus to the parent container
    bindsym --to-code $mod+a focus parent
#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym --to-code $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym --to-code $mod+minus scratchpad show
#
# Resizing containers:
#
mode "resize" {
    bindsym --to-code $left resize shrink width 10px
    bindsym --to-code $down resize grow height 10px
    bindsym --to-code $up resize shrink height 10px
    bindsym --to-code $right resize grow width 10px

    bindsym --to-code Left resize shrink width 10px
    bindsym --to-code Down resize grow height 10px
    bindsym --to-code Up resize shrink height 10px
    bindsym --to-code Right resize grow width 10px

    bindsym --to-code Return mode "default"
    bindsym --to-code Escape mode "default"
}
bindsym --to-code $mod+Shift+Alt+r mode "resize"

bar {
	swaybar_command waybar
}

focus_follows_mouse no
default_border none
default_floating_border none
smart_borders on
workspace_auto_back_and_forth yes
gaps inner 7
gaps outer 3

for_window {
	[class="Spotify"] floating enable; resize set width 1 px height 1 px; move absolute position 2560 px 1080 px
	[shell="xwayland"] title_format "%title [XWayland]"
	[app_id="firefox" title="^Picture-in-Picture$"] floating enable; sticky enable
	[app_id="term-floating"] floating enable; resize set 1100 700
	[app_id="qalc"] floating enable; resize set 300 500; move position 1500 290
	[app_id="^chrome-.*"] shortcuts_inhibitor disable
	[app_id="blueman-manager"] floating enable
}

assign {
	[app_id="firefox"] 4
	[app_id="^(.?)-Kotatogram_Desktop"] 2
	[title="МЭШ"] 6
}

include /etc/sway/config.d/*
